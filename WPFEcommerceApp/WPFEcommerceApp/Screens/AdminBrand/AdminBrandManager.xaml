<UserControl x:Class="WPFEcommerceApp.AdminBrandManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFEcommerceApp"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="1500" d:DesignWidth="1440"
            >

    <ScrollViewer VerticalScrollBarVisibility="Hidden" CanContentScroll="True" Background="{StaticResource WhiteColorBrush}">
        <StackPanel Margin="95 20">
            <DockPanel Margin="0 20">
                <TextBlock Text="Brands"
                                   FontFamily="{StaticResource Bold}"
                                   FontSize="{StaticResource FontSizeHeadline}"
                                   />
                <Button DockPanel.Dock="Right"
                                Content="Add"
                                Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">
                    <Button.CommandParameter>
                        <local:AdminAddBrandDialog/>
                    </Button.CommandParameter>
                </Button>

                <Button DockPanel.Dock="Right" Margin="0 0 5 0"
                                Content="Remove"
                        Command="{Binding RemoveBrandCommand}"
                        CommandParameter="{Binding ElementName=datagrid, Path=SelectedItem}"/>
                
                <!-- Search bar -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    <local:SearchBar x:Name="searchbar" Width="400" SearchText="{Binding SearchString,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <ComboBox Margin="5 0" Text="{Binding SearchBy, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding SearchByOptions}"
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            materialDesign:HintAssist.Hint="Search by"
                            materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource BlackColorBrush}"
                            materialDesign:HintAssist.Foreground="{StaticResource BlackColorBrush}"/>
                </StackPanel>
            </DockPanel>

            <DataGrid ItemsSource="{Binding FilteredBrands}" Margin="0 20" x:Name="datagrid"
                              MaxHeight="700"
                              AutoGenerateColumns="False"
                      SelectedItem="{Binding SelectedItem}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Width="200" Binding="{Binding Id}" SortDirection="Ascending"/>
                    <DataGridTextColumn Header="Name" Width="*" Binding="{Binding Name}" SortDirection="Ascending"/>
                </DataGrid.Columns>


            </DataGrid>

            <TextBlock Text="Brand Requests"
                               Margin="0 20"
                                FontFamily="{StaticResource Bold}"
                                FontSize="{StaticResource FontSizeHeadline}"
                                   />
            <local:BrandRequestList Height="500" Margin="0 20"/>
            <StackPanel.InputBindings>
                <KeyBinding Key="Enter"
                            Command="{Binding SearchCommand}"/>
                <KeyBinding Key="Esc"
                            Command="{Binding CloseSearchCommand}"/>
            </StackPanel.InputBindings>

        </StackPanel>
    </ScrollViewer>
</UserControl>
