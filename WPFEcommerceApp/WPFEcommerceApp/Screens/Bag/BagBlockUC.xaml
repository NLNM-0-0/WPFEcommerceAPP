<UserControl x:Class="WPFEcommerceApp.BagBlockUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFEcommerceApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="bagBlock">
    <Border Height="100"
            BorderBrush="{StaticResource BoxLineColorBrush}"
            BorderThickness="1"
            Padding="20,5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <CheckBox 
                Width="20"
                Height="20"
                Margin="-30,0,0,0"
                Foreground="{StaticResource BlackColorBrush}"
                Background="{StaticResource BlackColorBrush}"
                IsChecked="{Binding ElementName=bagBlock, Path=IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Command="{Binding ElementName=bagBlock, Path=Command}"
                CommandParameter="{Binding ElementName=bagBlock, Path=CommandParameter}">
            </CheckBox>
            <Image Grid.Column="1" Source="{Binding ProductImage, ElementName=bagBlock}"
                   Margin="-20,0,0,0"
                   VerticalAlignment="Center">

            </Image>
            <TextBlock Grid.Column="2"
                       Text="{Binding ProductName, ElementName=bagBlock}"
                       VerticalAlignment="Center"
                       Margin="-10,0,0,0"
                       Foreground="{StaticResource NotAvailableColorBrush}">

            </TextBlock>
            <TextBlock Grid.Column="3"
                       Text="{Binding ShopName, ElementName=bagBlock}"
                       VerticalAlignment="Center"
                       Margin="-20,0,0,0"
                       Foreground="{StaticResource NotAvailableColorBrush}">

            </TextBlock>
            <TextBlock Grid.Column="4"
                       Text="{Binding UnitPrice, ElementName=bagBlock}"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Margin="15,0,0,0"
                       Foreground="{StaticResource NotAvailableColorBrush}">

            </TextBlock>
            <TextBlock Grid.Column="5"
                       Text="{Binding Amount, ElementName=bagBlock}"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Margin="20,0,0,0"
                       Foreground="{StaticResource NotAvailableColorBrush}">

            </TextBlock>
            <TextBlock Grid.Column="6"
                       Text="{Binding Price, ElementName=bagBlock}"
                       VerticalAlignment="Center"
                       TextAlignment="Center"
                       Margin="35,0,0,0"
                       Foreground="{StaticResource NotAvailableColorBrush}">

            </TextBlock>
        </Grid>
    </Border>
</UserControl>
