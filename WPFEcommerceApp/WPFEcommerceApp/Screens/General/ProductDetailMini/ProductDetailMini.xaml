<UserControl x:Class="WPFEcommerceApp.ProductDetailMini"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFEcommerceApp"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:it="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:i="clr-namespace:CalcBinding;assembly=CalcBinding"
             Width="1000"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Storyboard x:Key="ClickUnFavouriteProduct">
            <DoubleAnimation
                Storyboard.TargetName="UnFavoriteHeart"
                Storyboard.TargetProperty="Opacity"
                BeginTime="0:0:0.0"
                Duration="0:0:0.01"
                From="0"
                To="0"/>
            <DoubleAnimation
                Storyboard.TargetName="FavoriteHeart"
                Storyboard.TargetProperty="Opacity"
                BeginTime="0:0:0.0"
                Duration="0:0:0.2"
                From="1"
                To="1"/>
            <DoubleAnimation
                Storyboard.TargetName="FavoriteHeartScale"
                Storyboard.TargetProperty="ScaleX"
                BeginTime="0:0:0"
                From="1"
                To="1.5"
                Duration="0:0:0.2">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="FavoriteHeartScale"
                Storyboard.TargetProperty="ScaleY"
                From="1"
                To="1.5"
                BeginTime="0:0:0"
                Duration="0:0:0.2">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="FavoriteHeart"
                Storyboard.TargetProperty="Opacity"
                BeginTime="0:0:0.2"
                Duration="0:0:0.01"
                From="1"
                To="0"
                FillBehavior="HoldEnd">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="UnFavoriteHeart"
                Storyboard.TargetProperty="Opacity"
                BeginTime="0:0:0.2"
                Duration="0:0:0.01"
                From="0"
                To="1"
                FillBehavior="HoldEnd">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="UnFavoriteHeartScale"
                Storyboard.TargetProperty="ScaleX"
                BeginTime="0:0:0.2"
                From="1.5"
                To="1"
                Duration="0:0:0.1">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="UnFavoriteHeartScale"
                Storyboard.TargetProperty="ScaleY"
                From="1.5"
                To="1"
                BeginTime="0:0:0.2"
                Duration="0:0:0.1">
            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Key="ClickFavouriteProduct">
            <DoubleAnimation
                Storyboard.TargetName="FavoriteHeart"
                Storyboard.TargetProperty="Opacity"
                BeginTime="0:0:0.0"
                Duration="0:0:0.01"
                From="0"
                To="0"/>
            <DoubleAnimation
                Storyboard.TargetName="UnFavoriteHeart"
                Storyboard.TargetProperty="Opacity"
                BeginTime="0:0:0.0"
                Duration="0:0:0.2"
                From="1"
                To="1"/>
            <DoubleAnimation
                Storyboard.TargetName="UnFavoriteHeartScale"
                Storyboard.TargetProperty="ScaleX"
                BeginTime="0:0:0"
                From="1"
                To="1.5"
                Duration="0:0:0.2">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="UnFavoriteHeartScale"
                Storyboard.TargetProperty="ScaleY"
                From="1"
                To="1.5"
                BeginTime="0:0:0"
                Duration="0:0:0.2">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="UnFavoriteHeart"
                Storyboard.TargetProperty="Opacity"
                BeginTime="0:0:0.2"
                Duration="0:0:0.01"
                From="1"
                To="0"
                FillBehavior="HoldEnd">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="FavoriteHeart"
                Storyboard.TargetProperty="Opacity"
                BeginTime="0:0:0.2"
                Duration="0:0:0.01"
                From="0"
                To="1"
                FillBehavior="HoldEnd">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="FavoriteHeartScale"
                Storyboard.TargetProperty="ScaleX"
                BeginTime="0:0:0.2"
                From="1.5"
                To="1"
                Duration="0:0:0.1">
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="FavoriteHeartScale"
                Storyboard.TargetProperty="ScaleY"
                From="1.5"
                To="1"
                BeginTime="0:0:0.2"
                Duration="0:0:0.1">
            </DoubleAnimation>
        </Storyboard>
        <Style x:Key="CheckBoxRatingStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="{StaticResource BlackColorBrush}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Background" Value="{StaticResource BoxShadowColorBrush}"/>
            <Setter Property="FontFamily" Value="{StaticResource Regular}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="10 0"/>
            <Setter Property="FontSize" Value="{StaticResource FontSizeHeadline3}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <ControlTemplate.Resources>
                            <Storyboard x:Key="Click">
                                <DoubleAnimationUsingKeyFrames 
                                        Storyboard.TargetProperty="ScaleX" 
                                        Storyboard.TargetName="scaleTransform">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1.05"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.1"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames 
                                        Storyboard.TargetProperty="ScaleY" 
                                        Storyboard.TargetName="scaleTransform">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1.3"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.5"/>
                                </DoubleAnimationUsingKeyFrames>
                                <DoubleAnimationUsingKeyFrames 
                                        Storyboard.TargetProperty="(UIElement.Opacity)" 
                                        Storyboard.TargetName="InteractionEllipse">
                                    <EasingDoubleKeyFrame KeyTime="0" Value="0.2"/>
                                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                                </DoubleAnimationUsingKeyFrames>
                            </Storyboard>
                        </ControlTemplate.Resources>
                        <Border
                            BorderBrush="{TemplateBinding BorderBrush}"
                            Background="{TemplateBinding Background}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="20"
                            Padding="{TemplateBinding Padding}">
                            <Grid 
                                x:Name="templateRoot"
                                SnapsToDevicePixels="True"
                                Width="{TemplateBinding Width}">
                                <Rectangle 
                                        x:Name="InteractionEllipse" 
                                        Fill="{TemplateBinding BorderBrush}" 
                                        Opacity="0" 
                                        Width="{TemplateBinding Width}"
                                        Height="{TemplateBinding Height}"
                                        RenderTransformOrigin="0.5,0.5" >
                                    <Rectangle.RenderTransform>
                                        <ScaleTransform
                                                x:Name="scaleTransform"
                                                ScaleX="1"
                                                ScaleY="1"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>
                                <Grid
                                    VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border
                                        VerticalAlignment="Stretch">
                                        <materialDesign:PackIcon
                                            x:Name="checkGraphic"
                                            Kind="Check"
                                            Foreground="#4B8CDE"
                                            VerticalAlignment="Center"
                                            Visibility="Visible"
                                            Margin="0 0 10 0"/>
                                    </Border>
                                    <TextBlock
                                        x:Name="contentPresenter" 
                                        Grid.Column="1" 
                                        Focusable="False" 
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                        Text="{TemplateBinding Content}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    <Border
                                        VerticalAlignment="Stretch"
                                        Grid.Column="2">
                                        <materialDesign:PackIcon
                                            x:Name="starOutlineGraphic"
                                            Kind="StarOutline"
                                            Foreground="{TemplateBinding Foreground}"
                                            VerticalAlignment="Center"
                                            Visibility="Visible"
                                            Margin="5 0 0 0"/>
                                    </Border>
                                    <Border
                                        VerticalAlignment="Stretch"
                                        Grid.Column="2">
                                        <materialDesign:PackIcon
                                            x:Name="starFullGraphic"
                                            Kind="Star"
                                            Foreground="#4B8CDE"
                                            VerticalAlignment="Center"
                                            Visibility="Collapsed"
                                            Margin="5 0 0 0"/>
                                    </Border>
                                </Grid>

                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="ButtonBase.Click">
                                <BeginStoryboard Storyboard="{StaticResource Click}"/>
                            </EventTrigger>
                            <Trigger Property="HasContent" Value="true">
                                <Setter Property="FocusVisualStyle" Value="{StaticResource OptionMarkFocusVisual}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Opacity" Value="0.25"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true"/>
                            <Trigger Property="IsChecked" Value="true">
                                <Setter Property="Visibility" TargetName="checkGraphic" Value="Visible"/>
                                <Setter Property="Visibility" TargetName="starOutlineGraphic" Value="Collapsed"/>
                                <Setter Property="Visibility" TargetName="starFullGraphic" Value="Visible"/>
                                <Setter Property="Foreground" Value="#4B8CDE"/>
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderBrush" Value="#4B8CDE"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Visibility" TargetName="checkGraphic" Value="Collapsed"/>
                                <Setter Property="Visibility" TargetName="starOutlineGraphic" Value="Visible"/>
                                <Setter Property="Visibility" TargetName="starFullGraphic" Value="Collapsed"/>
                                <Setter Property="Foreground" Value="{StaticResource BlackColorBrush}"/>
                                <Setter Property="Background" Value="{StaticResource BoxShadowColorBrush}"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid
            HorizontalAlignment="Stretch"
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="8*"></ColumnDefinition>
                <ColumnDefinition Width="auto" ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="1">
                <local:AsyncImage Source="{Binding SelectedImage}"
                            Margin="5,30,5,30"
                            Width="auto"
                            HorizontalAlignment="Stretch"
                            Height="600"
                            Stretch="Uniform">
                </local:AsyncImage>

            </StackPanel>
            <Button Grid.Column="0"
                    Width="30"
                    Height="30"
                    Style="{StaticResource TransparentButton}"
                    Padding="0"
                    Command="{Binding PreviousImageCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                    Visibility="{i:Binding 'SelectedImageIndex!=-1', FalseToVisibility=Hidden}"
                    Opacity="0.5"
                    Margin="30 0 0 0">
                <fa:ImageAwesome
                    Icon="ChevronCircleLeft"
                    Foreground="{StaticResource BlackColorBrush}"/>
            </Button>
            <Button Grid.Column="2"
                    VerticalAlignment="Center"
                    Width="30"
                    Height="30"
                    Style="{StaticResource TransparentButton}"
                    Padding="0"
                    Command="{Binding NextImageCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}}"
                    Visibility="{i:Binding 'SelectedImageIndex!=-1', FalseToVisibility=Hidden}"
                    Opacity="0.5"
                    Margin="0 0 30 0">
                <fa:ImageAwesome
                    Icon="ChevronCircleRight"
                    Foreground="{StaticResource BlackColorBrush}"/>


            </Button>
        </Grid>
        <Grid
            Grid.Column="1"
            Background="{StaticResource WhiteColorBrush}"
            Canvas.Right="10"
            Margin="20 0 0 0"
            Width="350"
            ScrollViewer.CanContentScroll="False">
            <StackPanel
                    Width="350">
                <Grid 
                        HorizontalAlignment="Stretch"
                        Margin="0,20,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Border>
                        <TextBlock 
                            MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=ActualWidth}"
                            MaxHeight="300"
                            Text="{Binding SelectedProduct.Name,UpdateSourceTrigger=PropertyChanged}"
                            FontSize="{StaticResource FontSizeHeadline}"
                            FontWeight="Normal"
                            VerticalAlignment="Center"
                            TextWrapping="Wrap"
                            TextTrimming="CharacterEllipsis">
                        </TextBlock>
                    </Border>
                    <Grid
                            Grid.Column="2"
                            x:Name="HeartGrid"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            Margin="5"
                            Height="60"
                            Width="60"
                            Background="Transparent"
                            IsHitTestVisible="True"
                            PreviewMouseDown="HeartGrid_PreviewMouseDown"
                            Visibility="{i:Binding HeartVisibility, UpdateSourceTrigger=PropertyChanged}">
                        <Grid>
                            <materialDesign:PackIcon 
                                    x:Name="FavoriteHeart"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Kind="Heart"
                                    Height="40"
                                    Width="40"
                                    RenderTransformOrigin="0.5 0.5" 
                                    Opacity="{i:Binding IsFavoriteFirst?1:0, UpdateSourceTrigger=Explicit}"
                                    Foreground="{StaticResource ErrorColorBrush}">
                                <materialDesign:PackIcon.RenderTransform>
                                    <ScaleTransform
                                            x:Name="FavoriteHeartScale"
                                            ScaleX="{i:Binding IsFavoriteFirst?1:1.5, UpdateSourceTrigger=Explicit}"
                                            ScaleY="{i:Binding IsFavoriteFirst?1:1.5, UpdateSourceTrigger=Explicit}"/>
                                </materialDesign:PackIcon.RenderTransform>
                            </materialDesign:PackIcon>
                            <materialDesign:PackIcon 
                                    x:Name="UnFavoriteHeart"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Kind="HeartOutline"
                                    Height="40"
                                    Width="40"
                                    RenderTransformOrigin="0.5 0.5" 
                                    Foreground="{StaticResource BlackColorBrush}"
                                    Opacity="{i:Binding IsFavoriteFirst?0:1, UpdateSourceTrigger=Explicit}">
                                <materialDesign:PackIcon.RenderTransform>
                                    <ScaleTransform
                                        x:Name="UnFavoriteHeartScale"
                                        ScaleX="{i:Binding IsFavoriteFirst?1.5:1, UpdateSourceTrigger=Explicit}"
                                        ScaleY="{i:Binding IsFavoriteFirst?1.5:1, UpdateSourceTrigger=Explicit}"/>
                                </materialDesign:PackIcon.RenderTransform>
                            </materialDesign:PackIcon>
                        </Grid>
                    </Grid>
                </Grid>
                <Grid Margin="0,-10,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                            Text="Rating"
                            FontWeight="Light"
                            Margin="0 0 10 0"
                            VerticalAlignment="Center"
                            Visibility="{i:Binding 'RatingTimes > 0'}"
                            FontSize="{StaticResource FontSizeHeadline3}"
                            Foreground="{StaticResource BlackColorBrush}">

                    </TextBlock>
                    <DockPanel
                                Grid.Column="1"
                                Margin="0,0,5,0">
                        <TextBlock
                                    Margin="0 0 0 6"
                                    Text="No rating yet"
                                    Visibility="{i:Binding 'RatingTimes == 0'}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="{StaticResource FontSizeHeadline3}"
                                    FontWeight="Light"
                                    Foreground="{StaticResource NotAvailableColorBrush}"/>
                        <materialDesign:PackIcon
                                    Kind="StarHalfFull"
                                    Height="25"
                                    Visibility="{i:Binding '(Rating >= 0.5) and (Rating less 1)'}"/>
                        <materialDesign:PackIcon
                                    Kind="Star"
                                    Height="25"
                                    Visibility="{i:Binding 'Rating >= 1'}"/>
                        <materialDesign:PackIcon
                                    Kind="StarHalfFull"
                                    Height="25"
                                    Visibility="{i:Binding '(Rating >= 1.5) and (Rating less 2)'}"/>
                        <materialDesign:PackIcon
                                    Kind="Star"
                                    Height="25"
                                    Visibility="{i:Binding 'Rating >= 2'}"/>
                        <materialDesign:PackIcon
                                    Kind="StarHalfFull"
                                    Height="25"
                                    Visibility="{i:Binding '(Rating >= 2.5) and (Rating less 3)'}"/>
                        <materialDesign:PackIcon
                                    Kind="Star"
                                    Height="25"
                                    Visibility="{i:Binding 'Rating >= 3'}"/>
                        <materialDesign:PackIcon
                                    Kind="StarHalfFull"
                                    Height="25"
                                    Visibility="{i:Binding '(Rating >= 3.5) and (Rating less 4)'}"/>
                        <materialDesign:PackIcon
                                    Kind="Star"
                                    Height="25"
                                    Visibility="{i:Binding 'Rating >= 4'}"/>
                        <materialDesign:PackIcon
                                    Kind="StarHalfFull"
                                    Height="25"
                                    Visibility="{i:Binding '(Rating >= 4.5) and (Rating less 5)'}"/>
                        <materialDesign:PackIcon
                                    Kind="Star"
                                    Height="25"
                                    Visibility="{i:Binding 'Rating >= 5'}"/>
                        <!--<TextBlock
                                    Visibility="{i:Binding 'RatingTimes != 0'}"
                                    Text="{Binding Rating}"
                                    VerticalAlignment="Center"
                                    FontFamily="{StaticResource Bold}"
                                    FontSize="{StaticResource FontSizeText}"/>-->
                    </DockPanel>
                    <TextBlock 
                            Text=" | "
                            Grid.Column="2"
                            FontWeight="Light"
                            FontSize="{StaticResource FontSizeHeadline3}"
                            Foreground="{StaticResource NotAvailableColorBrush}">

                    </TextBlock>
                    <StackPanel
                            Grid.Column="3"
                            Orientation="Horizontal"
                            Margin="5 0 0 0">
                        <TextBlock 
                                Text="{Binding SelectedProduct.Sold}"
                                FontWeight="Normal"
                                HorizontalAlignment="Right"
                                FontSize="{StaticResource FontSizeHeadline3}"
                                Foreground="{StaticResource BlackColorBrush}">
                        </TextBlock>
                        <TextBlock 
                                Text="sold"
                                Margin="5,0,0,0"
                                FontWeight="Light"
                                FontSize="{StaticResource FontSizeHeadline3}"
                                Foreground="{StaticResource NotAvailableColorBrush}">
                        </TextBlock>
                    </StackPanel>

                </Grid>
                <WrapPanel>
                    <TextBlock 
                            Text="{Binding SelectedProduct.Brand.Name}"
                            FontWeight="Light"
                            TextWrapping="Wrap"
                            FontSize="{StaticResource FontSizeHeadline2}"
                            Foreground="{StaticResource BlackColorBrush}">
                    </TextBlock>
                    <TextBlock 
                            Text=" | "
                            Margin="5 0"
                            FontWeight="Light"
                            FontSize="{StaticResource FontSizeHeadline2}"
                            Foreground="{StaticResource BlackColorBrush}">
                    </TextBlock>
                    <TextBlock 
                            Text="{Binding SelectedProduct.Category.Name}"
                            FontWeight="Light"
                            FontSize="{StaticResource FontSizeHeadline2}"
                            Foreground="{StaticResource BlackColorBrush}"
                            TextWrapping="Wrap">
                    </TextBlock>
                </WrapPanel>
                <Border
                        Margin="0,20,0,0">
                    <WrapPanel
                            MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=ActualWidth}">
                        <TextBlock 
                                MaxWidth="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Border}, Path=ActualWidth}"
                                Text="{i:Binding 'SelectedProduct.Price'}"
                                FontWeight="Normal"
                                FontSize="{StaticResource FontSizeHeadline2}"
                                Foreground="{StaticResource NotAvailableColorBrush}"
                                TextDecorations="Strikethrough"
                                Visibility="{i:Binding 'SelectedProduct.Sale != 0', UpdateSourceTrigger=PropertyChanged}">
                        </TextBlock>
                        <TextBlock
                                Text=" "/>
                        <TextBlock
                                Text="{i:Binding '((100 -SelectedProduct.Sale) * SelectedProduct.Price / 100)'}"
                                FontWeight="Normal"
                                FontSize="{StaticResource FontSizeHeadline2}"
                                Foreground="{StaticResource BlackColorBrush}">
                        </TextBlock>
                        <TextBlock
                                Text=" USD"
                                FontWeight="Normal"
                                FontSize="{StaticResource FontSizeHeadline2}"
                                Foreground="{StaticResource BlackColorBrush}">
                        </TextBlock>
                    </WrapPanel>
                </Border>


                <TextBlock Text="Size"
                           Margin="0,30,0,20"
                           FontWeight="Normal"
                           FontSize="{StaticResource FontSizeHeadline3}"
                           Foreground="{StaticResource BlackColorBrush}">

                </TextBlock>
                <WrapPanel>
                    <RadioButton 
                            Content="S"
                            Style="{StaticResource RadioButtonFill}"
                            Grid.Column="0"
                            GroupName="Size"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Margin="2"
                            IsChecked="{Binding IsHadSizeS}"
                            Visibility="{i:Binding 'SelectedProduct.IsHadSizeS'}">
                    </RadioButton>
                    <RadioButton 
                            Content="M"
                            Style="{StaticResource RadioButtonFill}"
                            Grid.Column="1"
                            GroupName="Size"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Margin="2"
                            IsChecked="{Binding IsHadSizeM}"
                            Visibility="{i:Binding 'SelectedProduct.IsHadSizeM'}">
                    </RadioButton>
                    <RadioButton 
                            Content="L"
                            Style="{StaticResource RadioButtonFill}"
                            Grid.Column="2"
                            GroupName="Size"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Margin="2"
                            IsChecked="{Binding IsHadSizeL}"
                            Visibility="{i:Binding 'SelectedProduct.IsHadSizeL'}">
                    </RadioButton>
                    <RadioButton Content="XL"
                                     Style="{StaticResource RadioButtonFill}"
                                     Grid.Column="0"
                                     GroupName="Size"
                                     materialDesign:ButtonAssist.CornerRadius="5"
                                     Margin="2"
                                     IsChecked="{Binding IsHadSizeXL}"
                                     Visibility="{i:Binding 'SelectedProduct.IsHadSizeXL'}">
                    </RadioButton>
                    <RadioButton Content="XXL"
                                     Style="{StaticResource RadioButtonFill}"
                                     Grid.Column="1"
                                     GroupName="Size"
                                     materialDesign:ButtonAssist.CornerRadius="5"
                                     Margin="2"
                                     IsChecked="{Binding IsHadSizeXXL}"
                                     Visibility="{i:Binding 'SelectedProduct.IsHadSizeXXL'}">
                    </RadioButton>
                    <RadioButton Content="Free Size"
                                     Style="{StaticResource RadioButtonFill}"
                                     Grid.Column="2"
                                     GroupName="Size"
                                     materialDesign:ButtonAssist.CornerRadius="5"
                                     Margin="2"
                                     IsChecked="{Binding IsHadOneSize}"
                                     Visibility="{i:Binding 'SelectedProduct.IsOneSize'}">
                    </RadioButton>
                </WrapPanel>
                <Grid Margin="0 30 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock 
                            Text="Amount"
                            Grid.Column="0"
                            FontWeight="Normal"
                            VerticalAlignment="Center"
                            FontSize="{StaticResource FontSizeHeadline3}"
                            Foreground="{StaticResource BlackColorBrush}">
                    </TextBlock>
                    <Grid
                            Grid.Column="2"
                            HorizontalAlignment="Stretch"
                            x:Name="amountGrid">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Button
                                Grid.Column="0"
                                materialDesign:ButtonAssist.CornerRadius="5 0 0 5"
                                Style="{StaticResource WhiteButtonRectangle}"
                                Padding="0"
                                Height="30"
                                Width="30"
                                Content="-"
                                Command="{Binding Tamount, UpdateSourceTrigger=PropertyChanged}"
                                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=DataContext}"/>
                        <TextBox
                                FontWeight="Normal"
                                Margin="0 0 0 1"
                                materialDesign:HintAssist.IsFloating="False"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                materialDesign:HintAssist.Hint=""
                                materialDesign:TextFieldAssist.SuffixText="  "
                                materialDesign:TextFieldAssist.PrefixText="  "
                                SelectionBrush="{StaticResource BoxLineColorBrush}"
                                CaretBrush="{StaticResource BlackColorBrush}"
                                materialDesign:TextFieldAssist.UnderlineBrush="{StaticResource BlackColorBrush}"
                                FontSize="{StaticResource FontSizeText}"
                                MaxWidth="{i:Binding '(ActualWidth less 60)?0:(ActualWidth - 60)', RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Grid}}"
                                Grid.Column="1"
                                BorderThickness="0 1"
                                Padding="5 0"
                                materialDesign:TextFieldAssist.TextFieldCornerRadius="0"
                                Height="30"
                                VerticalContentAlignment="Center"
                                BorderBrush="{StaticResource BoxLineColorBrush}"
                                Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                                TextChanged="TextBox_TextChanged"
                                PreviewTextInput="TextBox_PreviewTextInput">
                        </TextBox>
                        <Button
                                Grid.Column="2"
                                Style="{StaticResource WhiteButtonRectangle}"
                                Padding="0"
                                materialDesign:ButtonAssist.CornerRadius="0 5 5 0"
                                Height="30"
                                Width="30"
                                Command="{Binding Plusamount, UpdateSourceTrigger=PropertyChanged}"
                                CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=DataContext}"
                                Content="+"/>
                    </Grid>
                </Grid>
                <StackPanel
                        Margin="70 5 0 0"
                        Orientation="Horizontal">
                    <TextBlock
                            Text="("
                            FontSize="{StaticResource FontSizeDescription}"
                            Foreground="{StaticResource NotAvailableColorBrush}"/>
                    <TextBlock
                            x:Name="instockTextBox"
                            Text="{Binding SelectedProduct.InStock}"
                            FontSize="{StaticResource FontSizeDescription}"
                            Foreground="{StaticResource NotAvailableColorBrush}"/>
                    <TextBlock
                            Text=" products are available)"
                            FontSize="{StaticResource FontSizeDescription}"
                            Foreground="{StaticResource NotAvailableColorBrush}"/>
                </StackPanel>

                <Grid Margin="0 20 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Button
                            Width="200"
                            Height="50"
                            Command="{Binding AddToBagCommand}"
                            Style="{StaticResource ButtonRectangle}"
                            CommandParameter="{Binding SelectedProduct}">
                        <Button.Content>
                            <StackPanel
                                        Orientation="Horizontal">
                                <TextBlock
                                        Text="Add to bag"
                                        Margin="0,3,0,0"
                                        FontSize="{StaticResource FontSizeHeadline3}"/>
                                <materialDesign:PackIcon
                                        Kind="Cart"
                                        Width="25"
                                        Height="25"
                                        Margin="40,2,0,0"/>
                            </StackPanel>
                        </Button.Content>
                        <it:Interaction.Triggers>
                            <it:EventTrigger EventName="Click">
                                <it:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                            </it:EventTrigger>
                        </it:Interaction.Triggers>
                    </Button>

                    <Button 
                            Content="Buy now"
                            Width="120"
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Height="50"
                            FontSize="{StaticResource FontSizeHeadline3}"
                            HorizontalAlignment="Left"
                            Command="{Binding BuyNowCommand}"
                            Style="{StaticResource ButtonRectangle}"
                            CommandParameter="{Binding SelectedProduct}">
                        <it:Interaction.Triggers>
                            <it:EventTrigger EventName="Click">
                                <it:InvokeCommandAction Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                            </it:EventTrigger>
                        </it:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid
                    Height="20">
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
