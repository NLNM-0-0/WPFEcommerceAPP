                <ListView ItemsSource="{Binding Products}" Height="700" Margin="10"
                          SelectedItem="{Binding SelectedProduct, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:ProductBlock Height="500" Width="350"
                                    ListProductImage="{Binding ImageProducts}"
                                    ProductName="{Binding Name}"
                                    Brand="{Binding Brand}"
                                    Category="{Binding Category}"
                                    Price="{Binding Price}"
                                    Sale="{Binding Sale}"
                                    Product="{Binding}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
